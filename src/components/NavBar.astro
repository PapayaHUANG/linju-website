---
import { Icon } from 'astro-icon';

import navData from '../data/navData';

import MenuToggle from './MenuToggle';
import ThemeToggle from './ThemeToggle';
---

<header class="flex justify-between items-center my-5">
  <div class="flex items-center justify-between">
    <a href="/">
      <Icon class="pt-2 fill-green" name="logo" width="50" />
    </a>
  </div>
  <nav class="hidden md:flex w-auto mt-2 mt-0">
    <ul class="flex flex-row gap-3">
      {
        navData.map((item) => (
          <li>
            <a
              href={item.path}
              class="text-blue px-5 py-2 rounded-2xl font-medium  hover:shadow-[0_5px_10px_0px_rgba(0,0,0,0.1)] hover:bg-white"
            >
              {item.name}
            </a>
          </li>
        ))
      }
    </ul>
  </nav>
  <div class="md:flex hidden">
    <ThemeToggle client:load />
  </div>
  <div class="md:hidden">
    <MenuToggle client:load />
  </div>
</header>
