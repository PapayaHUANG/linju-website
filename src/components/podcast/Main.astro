---
import PodcastCard from './PodcastCard.astro'
import Pagination from './Pagination.astro'

const {
  page,
  allPodcasts,
  lastPage,
  current,
  currentPage,
  firstPath,
  prev,
  next,
  lang,
  t
} = Astro.props
---

<div class='mt-3 text-center'>
  <h1
    class='text-4xl lg:text-5xl font-bold lg:tracking-tight dark:text-slate-200'
  >
    {t('podcast.title')}
  </h1>
  <main class='mt-16 flex flex-col'>
    <ol class='flex flex-col space-y-8'>
      {
        page.data.map((post) => (
          <li>
            <PodcastCard
              title={post.data.title}
              description={post.data.description}
              date={post.data.date}
              url={`/podcast/${post.slug.substring(3)}`}
              {...{ lang, t }}
            />
          </li>
        ))
      }
    </ol>
  </main>
  <div class='mt-16'>
    {
      allPodcasts.length > 5 && (
        <div>
          <Pagination
            length={lastPage}
            currentUrl={current}
            currentPage={currentPage}
            firstUrl={`/${firstPath}`}
            prevUrl={prev}
            nextUrl={next}
          />
        </div>
      )
    }
  </div>
</div>
