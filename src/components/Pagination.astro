---
const { length, currentUrl, currentPage, firstUrl, prevUrl, nextUrl, lastUrl } =
  Astro.props;
const paginationList: number[] = Array.from(
  { length },
  (_, index) => index + 1
);

import IconLeft from '~icons/tabler/square-rounded-chevron-left';
import IconRight from '~icons/tabler/square-rounded-chevron-right';
---

<nav aria-label="Blog pages" class="flex justify-center py-2">
  {
    prevUrl ? (
      <a href={prevUrl}>
        <IconLeft style={{ fontSize: '2rem' }} />
      </a>
    ) : (
      <IconLeft style={{ fontSize: '2rem' }} />
    )
  }

  <ol class="flex">
    {
      paginationList.map((num) => (
        <li class="px-2 focus:ring-2">
          <a href={`${firstUrl}${num == 1 ? '' : '/' + num}`}>{num}</a>
        </li>
      ))
    }
  </ol>

  {
    nextUrl ? (
      <a href={nextUrl}>
        <IconRight style={{ fontSize: '2em' }} />
      </a>
    ) : (
      <IconRight style={{ fontSize: '2em' }} />
    )
  }
</nav>
