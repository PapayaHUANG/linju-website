---
import { Icon } from 'astro-icon';
const { length, currentUrl, currentPage, firstUrl, prevUrl, nextUrl, lastUrl } =
  Astro.props;
const paginationList: number[] = Array.from(
  { length },
  (_, index) => index + 1
);
---

<nav aria-label="Blog pages" class="flex justify-center py-2">
  {
    prevUrl ? (
      <a href={prevUrl}>
        <Icon name="left" class="w-6" />
      </a>
    ) : (
      <Icon name="left" class="w-6" />
    )
  }

  <ol class="flex">
    {
      paginationList.map((num) => (
        <li class="px-2 focus:ring-2">
          <a href={`${firstUrl}${num == 1 ? '' : '/' + num}`}>{num}</a>
        </li>
      ))
    }
  </ol>

  {
    nextUrl ? (
      <a href={nextUrl}>
        <Icon name="right" class="w-6" />
      </a>
    ) : (
      <Icon name="right" class="w-6" />
    )
  }
</nav>
