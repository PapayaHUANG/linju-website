---
interface Props {
  name: string;
}

const { name } = Astro.props;

const colorConfig = {
  devTips: 'before:bg-amber-400',
  lifeHacks: 'before:bg-red-400',
  englishLearnings: 'before:bg-blue-400',
};
---

<span
  class:list={[
    'before:block before:absolute before:-inset-0.5 before:rounded px-2 relative inline-block before:shadow',
    colorConfig[name],
  ]}
>
  <span class="relative text-white">
    <slot />
  </span>
</span>
