---
interface Props {
  url: string
  style?: 'default' | 'card'
  currentPath?: string
  classes?: string
}

const { url, style = 'default', currentPath, classes, ...rest } = Astro.props

const styleConfig = {
  default: `font-bold text-xl tracking-widest text-cyan-700 relative before:absolute before:inset-x-0 before:bottom-0 before:h-2 before:origin-right before:scale-x-0 before:bg-cyan-400 before:transition before:duration-200 hover:before:origin-left hover:before:scale-x-100 dark:text-slate-200 dark:before:bg-purple-400 ${
    currentPath === url ? `before:scale-x-100` : ``
  }`
}
---

<li class:list={['relative', classes]}>
  <a href={url} class:list={[styleConfig[style]]}>
    <span class='relative group-hover:text-secondary'>
      <slot />
    </span>
  </a>
</li>
